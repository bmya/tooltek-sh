<odoo>
  <data>
    <!-- Vista formulario -->
    <record id="view_crm_visit_form" model="ir.ui.view">
      <field name="name">crm.visit.form</field>
      <field name="model">crm.visit</field>
      <field name="arch" type="xml">
        <form string="Registro de Visitas">
          <sheet>
            <group>
              <field name="partner_id"/>
              <field name="date"/>
              <field name="time"/>
              <field name="sale_made"/>
              <field name="comment"/>
            </group>
          </sheet>
        </form>
      </field>
    </record>
    
    <!-- Vista árbol -->
    <record id="view_crm_visit_tree" model="ir.ui.view">
      <field name="name">crm.visit.tree</field>
      <field name="model">crm.visit</field>
      <field name="arch" type="xml">
        <tree string="Registro de Visitas">
          <field name="partner_id"/>
          <field name="date"/>
          <field name="time"/>
          <field name="sale_made"/>
          <field name="comment"/>
        </tree>
      </field>
    </record>
    
    <!-- Acción -->
    <record id="action_crm_visit" model="ir.actions.act_window">
      <field name="name">Registro de Visitas</field>
      <field name="res_model">crm.visit</field>
      <field name="view_mode">tree,form</field>
      <field name="help" type="html">
        <p class="oe_view_nocontent_create">Haz click para registrar una visita.</p>
      </field>
    </record>
    
    <!-- Menú -->
    <menuitem id="menu_crm_visit" name="Registro de Visitas" sequence="20"
        parent="base.menu_sales"
        action="action_crm_visit" />
  </data>
</odoo>